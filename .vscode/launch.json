{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "main_kitti",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "--cfg",
                "cfgs/M2_track_kitti.yaml",
                "--batch_size",
                "1",
                "--epoch",
                "1"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "main_delft",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "--cfg",
                "cfgs/M2_track_delft.yaml",
                "--batch_size",
                "8",
                "--epoch",
                "10"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
